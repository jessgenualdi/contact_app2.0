<h3>Add a new contact</h3>
<%= form_tag "/contacts", method: :post do %>
<div>
<%= label_tag :first_name, "Enter your first name: " %>
<%= text_field_tag :first_name%>
</div>
<div>
<%= label_tag :last_name, "Enter your last name: " %>
<%= text_field_tag :last_name%>
</div>
<div>
<%= label_tag :email, "Enter your email: " %>
<%= text_field_tag :email%>
</div>
<div>
<%= label_tag :phone_number, "Enter your phone number: " %>
<%= text_field_tag :phone_number%>
</div>
<%= submit_tag "Add new contact" %>
<% end %>


